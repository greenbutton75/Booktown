using System.Threading.Tasks;
using BasketProto;
using Grpc.Core;
using Microsoft.Extensions.Logging;

namespace Basket.Services
{
    public class BasketService : BasketTransport.BasketTransportBase
    {
        private readonly ILogger _logger;

        public BasketService(ILoggerFactory loggerFactory)
        {
            _logger = loggerFactory.CreateLogger<BasketService>();
        }

        public override Task<BasketReply> GetBasket(BasketRequest request, ServerCallContext context)
        {
            return Task.FromResult(new BasketReply { Message = "Hello " + request.Name });
        }
    }
}